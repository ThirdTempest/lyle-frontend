---
interface Props {
  id: number;
  name: string;
  price: number;
  image_url: string;
  slug: string;
}

const { id, name, price, image_url, slug } = Astro.props;
---

<a href={`/products/${slug}`} class="group">
  <div class="w-full aspect-w-1 aspect-h-1 bg-gray-200 rounded-lg overflow-hidden xl:aspect-w-7 xl:aspect-h-8">
    <img src={image_url} alt={name} class="w-full h-full object-center object-cover group-hover:opacity-75" />
  </div>
  <h3 class="mt-4 text-sm text-gray-700">{name}</h3>
  <p class="mt-1 text-lg font-medium text-gray-900">${price}</p>
</a>
